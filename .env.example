# FastAPI
APP_ENV=local
API_PORT=8000
LOG_LEVEL=INFO

# PostgreSQL + pgvector
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=ragdb
POSTGRES_USER=rag_user
POSTGRES_PASSWORD=rag_pass
POSTGRES_DSN=postgresql+psycopg://rag_user:rag_pass@localhost:5432/ragdb
PGVECTOR_SCHEMA=public
EMBEDDING_DIM=768

# Retrieval + embeddings
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2
BM25_K1=1.5
BM25_B=0.75
RRF_K=60
MAX_HIERARCHICAL_DEPTH=3

# LLM + LangChain
LLM_PROVIDER=openai
OPENAI_API_KEY=replace-me
LANGCHAIN_TRACING_V2=false

# Evaluation
RAG_EVALUATION_SAMPLE_SIZE=50
RAG_EVAL_TOP_K=8
